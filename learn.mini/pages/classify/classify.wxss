page,.page {
  height: 100%;
  font-family: 'PingFang SC', 'Helvetica Neue', Helvetica, 'Droid Sans Fallback', 'Microsoft Yahei', sans-serif;
}
/*左侧列表*/
.page-bottom{
  height: 100%;
  width: 750rpx;
  position: fixed;
  background-color: rgb(0, 68, 97);
  z-index: 0;
}
.wc{
  color: white;
  padding: 30rpx 0 30rpx 40rpx;
}
.page-class-list{
  padding-top: 150rpx;
}
/*右侧顶部*/
.page-top{
  height: 100%;
  position: fixed;
  width: 750rpx;
  /* background-color: rgb(227, 237, 205); */
  z-index: 0;
  transition: All 0.4s ease;
  -webkit-transition: All 0.4s ease;
}
.page-bgcolor{
  background-color: red;
}
/*右侧科目选择*/
.page-top-class{
  position: absolute;
  width: 68rpx;
  height: 38rpx;
  left: 20rpx;
  top: 20rpx;
}
/*右侧风格选择*/
.page-top-style{
    position: absolute;
    width: 268rpx;
    height:100rpx;
    text-align: center;
    right: 20rpx;
    top: 20rpx;
}
.page-top-style image{
    position: absolute;
    width: 60rpx;
    height:40rpx;
    right: 20rpx;
    top: 5rpx;
}
.style_select{
    margin-top:0;
    z-index: 100;
    position: absolute;
}
.select_one{
    text-align: center;
    background-color:rgb(239, 239, 239);
    width:268rpx;
    height:100rpx;
    line-height:100rpx;
    border-bottom:2rpx solid rgb(255, 255, 255);
}
.rotateRight{
    transform: rotate(180deg);
}
/*右侧内容*/
.page-content{
  margin-top: 90rpx;
  padding-top: 10rpx;
  width: 100%;
  height: 100%;
}
/*右侧列表*/
.page-content-list{
  padding: 0rpx 20rpx 0rpx 20rpx;
  width: 100%;
  height: 10%;
  background-color: rgb(176,224,230);
  margin: 20rpx 0;
  border-bottom: 1px solid #eee;
  font-size: 12px;
}
.page-content-right{
  float: right;
  padding-right: 30rpx;
}
.page-content-omit{
  display: block;
  width: 95%;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
  word-wrap: normal;
}
/*右侧缩放*/
.c-state1{
  transform: rotate(0deg) scale(.9,1) translate(20%,0%);
  -webkit-transform: rotate(0deg) scale(.9,1) translate(20%,0%);
}
